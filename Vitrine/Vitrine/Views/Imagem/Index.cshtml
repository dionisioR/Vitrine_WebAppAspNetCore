@model Vitrine.Models.Imagem

<h4>Upload de Imagem</h4>
<hr />
<div class="row">
    <div class="col-md-6">

        <form asp-action="UploadImagem" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo de seleção do arquivo -->
            <div class="form-group">
                <label asp-for="ArquivoImagem" class="control-label"></label>
                <input asp-for="ArquivoImagem" type="file" class="form-control" />
                <span asp-validation-for="ArquivoImagem" class="text-danger"></span>
            </div>

            <!-- Seleção do produto -->
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                @* <input asp-for="ProdutoId" type="number" step="1" class="form-control" /> *@
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>

            <!-- Botão -->
            <div class="form-group mt-3">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
